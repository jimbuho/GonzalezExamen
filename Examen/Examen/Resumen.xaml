<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen.Resumen">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Resumen de inscripcion" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label x:Name="lblWelcome" Text="Bienvenido:" FontSize="Title" Padding="30,10,30,10"></Label>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Text="Nombre:" TextColor="Blue"  Grid.Row="0" Grid.Column="0"></Label>
                <Label x:Name="lblName"  Grid.Row="0" Grid.Column="1"></Label>
                <Label Text="A Pagar:"  TextColor="Blue" Grid.Row="1" Grid.Column="0"></Label>
                <Label x:Name="lblToPay"  Grid.Row="1" Grid.Column="1"></Label>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>