<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Ingreso de usuarios" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"></Image>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Entry x:Name="txtUser" Grid.Row="0" Grid.Column="0" Placeholder="Nombre de usuario"></Entry>
                <Entry x:Name="txtPass" IsPassword="True" Grid.Row="1" Grid.Column="0" Placeholder="Ingrese su clave"></Entry>
                <Button x:Name="btnLogin" Clicked="btnLogin_Clicked" Text="Login" Grid.Row="2" Grid.Column="0"></Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>